                    @Html.EditorFor(model => model.ID_Especie, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ID_Especie, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ID_TA, "ID_TA", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-xs-6">
                    @Html.DropDownList("ID_TA", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_TA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ID_Porte, "ID_Porte", htmlAttributes: new { @class = "control-label col-md-2" })
