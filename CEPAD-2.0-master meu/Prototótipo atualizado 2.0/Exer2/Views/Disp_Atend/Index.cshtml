@model IEnumerable<Exer2.Models.Disp_Atend>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="pequeno3">
    <p id="formTi" class="text-center">Disponibilidade de Atendimento</p>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <button class="btn btn-primary rounded-pill btn-block shadow-sm">
                    @Html.ActionLink("Criar Novo", "Create")
                </button>
            </li>
        </ol>
    </nav>
    <table id="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NT_Atend_Ofer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Num_Atend_Agendado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.porte.Nome_Porte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Atendimento.Consulta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo.Nome_Tipo_Animal)
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NT_Atend_Ofer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num_Atend_Agendado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.porte.Nome_Porte)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo_Atendimento.Consulta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo.Nome_Tipo_Animal)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DT_Inicio })
                </td>
                <td>    @Html.ActionLink("Details", "Details", new { id = item.DT_Inicio }) </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.DT_Inicio })
                </td>
            </tr>
        }

    </table>
</div>