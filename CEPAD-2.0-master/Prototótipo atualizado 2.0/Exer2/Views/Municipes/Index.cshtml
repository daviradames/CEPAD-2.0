@model IEnumerable<Exer2.Models.Municipe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="pequeno4">

    <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">  <button class="btn btn-primary rounded-pill btn-block shadow-sm"> @Html.ActionLink("Novo Munícipe", "Create")</button></li>
        <li class="breadcrumb-item"> <button class="btn btn-primary rounded-pill btn-block shadow-sm">@Html.ActionLink("Animal", "Index", "Animals")</button></li>
        <li class="breadcrumb-item active" aria-current="page"><button class="btn btn-primary rounded-pill btn-block shadow-sm"> @Html.ActionLink("Pesquisa", "Pesquisa", "Clientes")</button></li>
    </ol>
    </nav>

    <table class="table table-sm table-dark">
        <thead>
            <tr class="table-active">
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.RG)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.DT_Nasc)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Tel_Fixo)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.UF)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Rua)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.NR_Casa)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Bairro)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Celular)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.CPF)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Complemento)
                </th>
                <th scope="row">
                    @Html.DisplayNameFor(model => model.Usuario.USuario1)
                </th>



            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RG)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DT_Nasc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tel_Fixo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rua)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NR_Casa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bairro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Celular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Complemento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.USuario1)
                    </td>
                    <td>

                        
                        @Html.ActionLink("Editar", "Edit",
         new { controller = "Municipes", id = item.ID_Municipe },
         new { @class = "linkClass"  })
                    <td>
                        @Html.ActionLink("Detalhes", "Details",
        new { controller = "Municipes", id = item.ID_Municipe },
        new { @class = "linkClass"  })
                    </td>
                    <td>
                        @Html.ActionLink("Deletar", "Delete",
        new { controller = "Municipes", id = item.ID_Municipe },
        new { @class = "linkClass"  })
                    </td>
                </tr>
            </tbody>
        }

    </table>
</div>